# Environment Configuration for suRxit Backend

# Database
DATABASE_URL=sqlite:///./surxit.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/surxit_db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# External APIs
DRUG_DATABASE_API_KEY=your-drug-db-api-key
FDA_API_KEY=your-fda-api-key

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Logging
LOG_LEVEL=INFO
LOG_FILE=surxit.log

# Features
ENABLE_REAL_TIME_ALERTS=true
ENABLE_FILE_UPLOAD=true
ENABLE_OCR=false  # Set to true when tesseract is installed

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Development
DEBUG=true
RELOAD=true